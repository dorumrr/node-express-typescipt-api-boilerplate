{
  "compilerOptions": {
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "outDir": "./build",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "typeRoots": ["./src/types", "node_modules/@types"]
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}